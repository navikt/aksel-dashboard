{
  "compilerOptions": {
    "incremental": true,
    "types": [],
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "lib": ["es2018"],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "target": "es2018"
  },
  "exclude": ["node_modules"]
}
